<% form_for :user do |f| %>
    <%= f.error_messages %>
    <%= f.label :username, 'User name' %>:
    <%= f.text_field :username %><br /><br />
    <%= f.label :password, 'Password' %>:
    <%= f.password_field :password %><br /><br />
    <%= f.label :password_confirmation, 'Confirm password' %>:
    <%= f.password_field :password_confirmation %><br /><br />
    <%= submit_tag 'Register' %>
<% end %>